.mercari
  .mercari-header
    %h1
      = link_to "/" do
        = image_tag "logo.svg", style: "background: rgb(245, 245, 245);"
  .main-login
    .main-login-reg
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録" , new_user_registration_path
    .main-login_body
      .main-login_body_bottun
        = link_to user_facebook_omniauth_authorize_path, class: "btn facebook" do
          %span.fab.fa-facebook>
          Facebookでログイン
        = link_to user_google_oauth2_omniauth_authorize_path, class: "btn google" do
          %span.fab.fa-google &gt;Googleでログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

      .main-login_body_contents
        = f.email_field :email, autofocus: true, placeholder: "メールアドレス"
        = f.password_field :password, autocomplete: "off", placeholder: "パスワード"
        
        = f.submit "ログイン", class: "login-form"
        %br/
        = link_to "パスワードをお忘れの方", "/"
    .mercari-footer
      %nav
        %ul
          %li プライバシーポリシー
          %li メルカリ利用規約
          %li 特定商取引に関する表記
      .mercari-footer_contents
        = link_to "/", class: "single-footer-logo" do
          = image_tag  "mercari.svg", style: "background: rgb(245, 245, 245);"
        %p
          %small © 2019 Mercari
