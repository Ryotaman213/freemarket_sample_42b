.mercari
  .mercari-header
    %h1
      = link_to "/" do
        = image_tag "logo.svg", style: "background: rgb(245, 245, 245);"
  .info
    .info-header
      %h2 会員情報入力
    .info-contents
      .info-contents_form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .info-contents_form_field
            %p
              ニックネーム
              %span 必須
            = f.text_field :nickname, placeholder: "例) メルカリ太郎",  autofocus: true, value: "#{@user.nickname}"
            %p
              メールアドレス
              %span 必須
            = f.email_field :email, placeholder: "携帯、PCどちらでも可"
            %p
              パスワード
              %span 必須
            = f.password_field :password, placeholder: "6文字以上", autocomplete: "off"
            %p
              パスワード（確認）
              %span 必須
            = f.password_field :password_confirmation, placeholder: "6文字以上", type: "password", autocomplete: "off"
            .g-recaptcha{"data-callback" => "clearcall", "data-sitekey" => "6LfOU4kUAAAAADvfIChNQTbPj-VHuWd5bPj7kJU5", :style => "margin-top: 30px;"}

            = f.submit "次へ進む", class: "info-contents_form__field_submit"

    .mercari-footer
      %nav
        %ul
          %li プライバシーポリシー
          %li メルカリ利用規約
          %li 特定商取引に関する表記
      .mercari-footer_contents
        = link_to "/", class: "single-footer-logo" do
          = image_tag  "mercari.svg", style: "background: rgb(245, 245, 245);"
        %p
          %small © 2019 Mercari

